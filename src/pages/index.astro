---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Banner from '../components/Banner.astro';
---

<script>
	import { createScene } from '../three/scene';

	const el = document.getElementById('something') as HTMLDivElement;
	if (el) {
		createScene(el, 'sail');
	}
</script>

<Layout title='Sail'>
	<main class="overflow-clip">
		<div class='flex flex-col justify-between'>
		<div class='px-12 py-8 h-[100vh] bg-black'>
			<Header/>
			<div class='text-3xl max-w-md pt-48 md:text-4xl lg:text-5xl '>
				An order book protocol on <a class = "underline" target="_blank" href = "https://www.fuel.network/">Fuel</a>.
			</div>
			<div class='w-full'>
				<div id='something' class='justify-end translate-y-[-5vh] translate-x-[5vw] md:translate-x-[30vw] lg:translate-x-[50vw]'>
			</div>
		</div>
		</div>
		<div class="z-50">
			<Footer/>
		</div>
	</div>
	</main>
</Layout>
